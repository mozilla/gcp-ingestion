<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
    "-//Puppy Crawl//DTD Suppressions 1.0//EN"
    "http://www.puppycrawl.com/dtds/suppressions_1_0.dtd">

<suppressions>

    <!-- google-java-format appears to allow lines over 100 chars in some cases -->
    <suppress checks="LineLength"
              files="InputFileFormat.java"/>
    <suppress checks="LineLength"
              files="OutputType.java"/>

    <!-- Confine use of JSONObject to only the JsonValidator class -->
    <suppress checks="IllegalImport"
              files="JsonValidator.java|JSONSchemaStore.java"/>

    <!-- heka protobuf file is autogenerated -->
    <suppress checks=".*" files="Heka.java" />

    <!-- copied file from upstream apache/beam -->
    <suppress checks=".*" files="DynamicDestinationsHelpers.java" />
    <suppress checks=".*" files="BatchLoads.java" />

    <!-- suppress all checks in the generated directories -->
    <suppress checks=".*" files=".+[\\\/]generated[\\\/].+\.java" />
    <suppress checks=".*" files=".+[\\\/]generated-sources[\\\/].+\.java" />
    <suppress checks=".*" files=".+[\\\/]generated-test-sources[\\\/].+\.java" />
</suppressions>
