#!/usr/bin/env bash

# error on command line options
if [ "$#" -gt 0 ]; then
    echo "This command does not allow options but got: $*" >&2
    exit 1
fi

"$(dirname "$0")"/pytest --cov=./ingestion_edge/ --junitxml=test-results/pytest.xml && \
  "$(dirname "$0")"/lint --junitxml=test-results/lint.xml
